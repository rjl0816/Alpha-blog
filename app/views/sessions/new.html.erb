<h1 class="text-center mt-5 mb-5">Log In</h1>

<div class="row justify-content-center">
    <div class="col-10">
        <%= form_with(scope: :session, url: login_path, class:"shadow-lg p-1 bg-dark rounded", local: true) do |f| %>
            <div class="row justify-content-center">
                <div class="col-10">
                    <div class="container mt-5">
                        <div class="form-group row mb-5">
                            <%= f.label :email, class: "col-2 col-form-label text-white" %>
                            <div class="col-10">
                                <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <%= f.label :password, class: "col-2 col-form-label text-white" %>
                            <div class="col-10">
                                <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center">
                            <%= f.submit "Log In", class: "btn btn-outline-light btn-lg" %>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>