<h1 class="text-center mt-5 mb-5">Create a new Category</h1>

<div class="row justify-content-center">
    <div class="col-10">
        <%= render 'layouts/errors', obj: @category %>
        <%= form_with(model: @category, class:"shadow-lg p-1 bg-dark rounded", local: true) do |f| %>
            <div class="row justify-content-center">
                <div class="col-10">
                    <div class="container mt-5">
                        <div class="form-group row mb-5">
                            <%= f.label :name, "Category name", class: "col-2 col-form-label text-white" %>
                            <div class="col-10">
                                <%= f.text_field :name, class: "form-control", placeholder: "Enter a name" %>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center">
                            <%= f.submit class: "btn btn-outline-light btn-lg" %>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
        <%= link_to 'Cancel', articles_path, class: "row justify-content-center mt-5 text-danger" %>
    </div>
</div>