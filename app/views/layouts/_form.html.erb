<div class="row justify-content-center">
    <div class="col-10">
        <%= form_with(model: @article, class:"shadow-lg p-1 bg-dark rounded", local: true) do |f| %>
            <div class="row justify-content-center">
                <div class="col-10">
                    <div class="container mt-5">
                        <div class="form-group row mb-5">
                            <%= f.label :title, class: "col-2 col-form-label text-white" %>
                            <div class="col-10">
                                <%= f.text_field :title, class: "form-control", placeholder: "Title of the Article" %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <%= f.label :description, class: "col-2 col-form-label text-white" %>
                            <div class="col-10">
                                <%= f.text_area :description, rows: 9, class: "form-control", placeholder: "Description of the Article" %>
                            </div>
                        </div>
                        <div class="form-group row justify-content-center">
                            <%= f.submit class: "btn btn-outline-light btn-lg"%>
                        </div>
                    </div>
                </div>
            </div>
        <% end %>
        <%= link_to 'Cancel', articles_path, class: "row justify-content-center mt-3 text-danger" %>
    </div>
</div>
    