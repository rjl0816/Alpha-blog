<h1 class="text-center mt-4 mb-4">Alpha Bloggers</h1>

<div class="container">
    <% @users.each do |user| %>
        <div class="card text-center mb-4 shadow-lg rounded">
            <div class="card-header font-italic">
                <%= link_to user.username, user %>
            </div>
            <div class="card-body">
                <h5 class="card-title">
                    <%= link_to gravatar_for(user, size: 150), user %>
                </h5>
                <p class="card-text"><%= pluralize(user.articles.count, "article") %></p>
                <%= link_to "View Profile", user, class: "btn btn-outline-success mt-4" %>
                <%= link_to "Edit Profile", edit_user_path(user), class: "btn btn-outline-info mt-4" %>
            </div>
            <div class="card-footer text-muted">
                <small>
                    Joined <%= time_ago_in_words(user.created_at) %> ago 
                </small>                
            </div>
        </div>
    <% end %>
</div>

<div class="apple_pagination">
    <%= will_paginate @users, :container => false %>
</div>